<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rbdb.moviebase">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mb_01"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HiddenTitleTheme">
        <activity
            android:name=".presentation.RentableMovieActivity"
            android:theme="@style/AppThemeNoActionBar" />

        <activity
            android:name=".presentation.LoginActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.FilmDetailActivity"
            android:label="@string/title_activity_film_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.RentActivity" />
        <activity android:name=".presentation.MenuActivity" />
        <activity android:name=".presentation.myRentalsActivity" />
        <activity android:name=".presentation.ReturnRentalActivity"></activity>
    </application>

</manifest>